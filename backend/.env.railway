# Configuración para Railway (Producción)

# Entorno
NODE_ENV=production

# Servidor
PORT=4000

# Base de Datos MySQL (Railway provee estas variables automáticamente)
# Usa las variables de Railway en formato: ${{MySQL.VARIABLE}}
DB_HOST=${{MySQL.MYSQLHOST}}
DB_PORT=${{MySQL.MYSQLPORT}}
DB_NAME=${{MySQL.MYSQLDATABASE}}
DB_USER=${{MySQL.MYSQLUSER}}
DB_PASS=${{MySQL.MYSQLPASSWORD}}

# JWT (CAMBIAR por un secreto seguro en producción)
JWT_SECRET=REEMPLAZAR-CON-UN-SECRETO-SUPER-SEGURO-ALEATORIO-123456789
JWT_EXPIRES_IN=7d

# Frontend URL (actualizar con la URL de Railway después del deploy)
FRONTEND_URL=https://tu-frontend-nombre.up.railway.app

# Logs
LOG_LEVEL=info
